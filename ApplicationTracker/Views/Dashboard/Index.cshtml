@using ApplicationTracker.Application.ViewModels
@using Microsoft.AspNetCore.Mvc.Rendering
@model DashboardViewModel

@{
    ViewData["Title"] = "Application Tracker Dashboard";

    var labelsJson = System.Text.Json.JsonSerializer.Serialize(
        Model.FunnelStats.Select(s => s.DisplayName));

    var countsJson = System.Text.Json.JsonSerializer.Serialize(
        Model.FunnelStats.Select(s => s.ApplicationCount));

    var sankeyRowsJson = System.Text.Json.JsonSerializer.Serialize(
        Model.SankeyLinks.Select(l => new object[] { l.From, l.To, l.Count }));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>
<body>
<h1 class='home-hero bluebox'><strong>Application Tracker Dashboard</strong> </h1>

<!-- ADD NEW APPLICATION -->
<section>
    <h2 class="home-hero yellowbox">Add New Application</h2>

    <form asp-action="CreateApplication" method="post" class="red-box" >

        <div>
            <label asp-for="NewApplication.CompanyName"></label>
            <input asp-for="NewApplication.CompanyName" />
            <span asp-validation-for="NewApplication.CompanyName" class="validation-error"></span>
        </div>

        <div>
            <label asp-for="NewApplication.JobTitle"></label>
            <input asp-for="NewApplication.JobTitle" />
            <span asp-validation-for="NewApplication.JobTitle" class="validation-error"></span>
        </div>

        <div>
            <select asp-for="NewApplication.StageId"
                    asp-items="@(new SelectList(Model.Stages, "StageId", "DisplayName"))">
                <option value="">-- Select stage --</option>
            </select>
            <span asp-validation-for="NewApplication.StageId" class="validation-error"></span>
        </div>

        <button type="submit">Add Application</button>
    </form>
</section>

<hr />

<!-- FUNNEL CHART -->
<h2 class="home-hero greenbox">Applications by Stage Reached</h2>
<div class="chart-container red-box1">
    <canvas id="stageFunnelChart"></canvas>
</div>

<hr />

<!-- SANKEY CHART -->
<h2 class="home-hero orangebox">Application Flow </h2>
<div class="sankey-container red-box1">
    <div id="sankey_chart"></div>
</div>



<hr />

<!-- TIMELINES -->
<h2 class="home-hero lightbluebox">Application Timelines</h2>

<table>
    <thead>
        <tr>
            <th class="th-company">Company</th>
            <th class="th-jobtitle">Job Title</th>
            <th class="th-timeline">Timeline</th>
            <th class="th-actions"></th>
            <th class="th-actions"></th>
        </tr>
    </thead>

    <tbody style="background-color: aliceblue">
    @if (!Model.Timelines.Any())
    {
        <tr>
            <td colspan="5">No applications yet.</td>
        </tr>
    }
    else
    {
        foreach (var app in Model.Timelines)
        {
            <tr>
                <td>@app.CompanyName</td>
                <td>@app.JobTitle</td>

                <td>
                    <div class="timeline">
                        @for (int i = 0; i < app.Events.Count; i++)
                        {
                            var ev = app.Events[i];
                            <span class="stage-pill">@ev.DisplayName</span>

                            if (i < app.Events.Count - 1)
                            {
                                <span class="timeline-arrow">→</span>
                            }
                        }
                    </div>
                </td>

                <td>
                    <form asp-action="UpdateApplication" method="get" style="display:inline;">
                        <input type="hidden" name="id" value="@app.ApplicationId" />
                        <button type="submit" class="edit-button">Update</button>
                    </form>
                </td>
                <td>
                    <form asp-action="DeleteApplication" method="post" style="display:inline;">
                        <input type="hidden" name="applicationId" value="@app.ApplicationId" />
                        <button type="submit" class="delete-button">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
    </tbody>
</table>

<!-- EDIT APPLICATION FORM -->
@if (Model.UpdateApplication != null)
{
    <hr />
    <h2>Edit Application</h2>

    <form asp-action="UpdateApplicationPost" method="post">

        <!-- Hidden primary key -->
        <input type="hidden" asp-for="UpdateApplication.ApplicationId" />

        <div>
            <label asp-for="UpdateApplication.CompanyName"></label>
            <input asp-for="UpdateApplication.CompanyName" />
            <span asp-validation-for="UpdateApplication.CompanyName" class="validation-error"></span>
        </div>

        <div>
            <label asp-for="UpdateApplication.JobTitle"></label>
            <input asp-for="UpdateApplication.JobTitle" />
            <span asp-validation-for="UpdateApplication.JobTitle" class="validation-error"></span>
        </div>

        <div>
            <label asp-for="UpdateApplication.StageId">Final Stage</label>
            <select asp-for="UpdateApplication.StageId"
                    asp-items="@(new SelectList(Model.Stages, "StageId", "DisplayName"))">
                <option value="">-- Select stage --</option>
            </select>

            <span asp-validation-for="UpdateApplication.StageId" class="validation-error"></span>
        </div>

        <button type="submit">Save Changes</button>
    </form>
}

<!-- SCRIPTS -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://www.gstatic.com/charts/loader.js"></script>

<script>
(function () {

    // -------- BAR CHART --------
    const labels = @Html.Raw(labelsJson);
    const counts = @Html.Raw(countsJson);

    const ctx = document.getElementById('stageFunnelChart').getContext('2d');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Applications (amount per category)',
                data: counts
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,   // makes it scale with container
            scales: {
                y: { beginAtZero: true, ticks: { precision: 0 } }
            }
        }
    });


    // -------- SANKEY DIAGRAM --------
    const sankeyRows = @Html.Raw(sankeyRowsJson);

    google.charts.load('current', { packages: ['sankey'] });
    google.charts.setOnLoadCallback(drawSankey);

    function drawSankey() {
        const data = new google.visualization.DataTable();

        data.addColumn('string', 'From');
        data.addColumn('string', 'To');
        data.addColumn('number', 'Count');

        data.addRows(sankeyRows);

        const chart = new google.visualization.Sankey(
            document.getElementById('sankey_chart')
        );

        chart.draw(data, {
            width: '100%',     // responsive width
            height: 400
        });
    }

    // Redraw on resize for responsiveness
    window.addEventListener('resize', drawSankey);

})();
</script>

</body>
</html>
