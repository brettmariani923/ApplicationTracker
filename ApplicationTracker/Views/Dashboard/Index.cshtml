@using ApplicationTracker.Application.ViewModels
@using ApplicationTracker.Application.DTO
@model TrackerDashboardViewModel

@{
    // No layout for now, to avoid the _Layout error.
    Layout = null;

    ViewData["Title"] = "Application Tracker Dashboard";

    var labelsJson = System.Text.Json.JsonSerializer.Serialize(
        Model.FunnelStats.Select(s => s.DisplayName));

    var countsJson = System.Text.Json.JsonSerializer.Serialize(
        Model.FunnelStats.Select(s => s.ApplicationCount));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 16px 24px;
        }

        .timeline {
            display: inline-flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .stage-pill {
            padding: 4px 10px;
            border-radius: 999px;
            border: 1px solid #ccc;
            margin: 2px;
            font-size: 0.85rem;
            background-color: #f9f9f9;
        }

        .timeline-arrow {
            margin: 0 4px;
            font-size: 0.9rem;
        }

        h1, h2 {
            margin-top: 16px;
            margin-bottom: 12px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 8px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 6px 8px;
        }

        th {
            background-color: #f3f3f3;
        }
    </style>
</head>
<body>

<h1>Application Tracker Dashboard</h1>

<hr />

<h2>Applications by Highest Stage Reached</h2>

<div style="max-width: 800px;">
    <canvas id="stageFunnelChart"></canvas>
</div>

<hr />

<h2>Application Flow (Sankey)</h2>
<div id="sankey_chart" style="width: 100%; max-width: 900px; height: 400px;"></div>

<hr />

<h2>Application Timelines</h2>

<table>
    <thead>
    <tr>
        <th style="width: 20%;">Company</th>
        <th style="width: 20%;">Job Title</th>
        <th style="width: 60%;">Timeline</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var app in Model.Timelines)
    {
        <tr>
            <td>@app.CompanyName</td>
            <td>@app.JobTitle</td>
            <td>
                <div class="timeline">
                    @for (int i = 0; i < app.Events.Count; i++)
                    {
                        var ev = app.Events[i];

                        <span class="stage-pill">@ev.DisplayName</span>

                        if (i < app.Events.Count - 1)
                        {
                            <span class="timeline-arrow">→</span>
                        }
                    }
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- Chart.js for the bar chart -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Google Charts for the Sankey diagram -->
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script>
    (function () {
        // ----- Bar chart (FunnelStats) -----
        const labels = @Html.Raw(labelsJson);
        const counts = @Html.Raw(countsJson);

        const ctx = document.getElementById('stageFunnelChart').getContext('2d');

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Applications (highest stage reached)',
                    data: counts
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { precision: 0 }
                    }
                }
            }
        });

        // ----- Sankey diagram (SankeyLinks) -----
        google.charts.load('current', { packages: ['sankey'] });
        google.charts.setOnLoadCallback(drawSankey);

        function drawSankey() {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'From');
            data.addColumn('string', 'To');
            data.addColumn('number', 'Count');

            data.addRows([
                @foreach (var link in Model.SankeyLinks)
                {
                    @: ['@link.From', '@link.To', @link.Count],
                }
            ]);

            var options = {
                height: 400
            };

            var chart = new google.visualization.Sankey(
                document.getElementById('sankey_chart'));

            chart.draw(data, options);
        }
    })();
</script>

</body>
</html>
